<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/fondo_pantalla_degradado"
    tools:context=".Vistas.MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="30dp"
        card_view:cardElevation="20dp"
        android:background="@drawable/cuadro_texto_editado">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp">


            <TextView
                android:id="@+id/login_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registro"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avatar"
                android:layout_width="140dp"
                android:layout_height="130dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_redondeado_white"
                app:srcCompat="@drawable/deku"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/roundeImage"
                />


         <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_agregar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="110dp"
                android:backgroundTint="@color/color2"
                android:clickable="true"
                card_view:srcCompat="@drawable/baseline_edit_24" />

        </RelativeLayout>


            <EditText
                android:id="@+id/usuario"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cuadro_texto_editado"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="Nombre"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cuadro_texto_editado"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:inputType="textPassword"
                android:hint="ContraseÃ±a"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

            <EditText
                android:id="@+id/fecha"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/baseline_date_range_24"
                android:ems="10"
                android:inputType="date"
                android:hint="Fecha nacimiento"
                android:clickable="true"
                android:maxLines="1"
                android:focusable="false"
                />

            <TextView
                android:id="@+id/sexo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Sexo"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"

                />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"

                >

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:checked="true"
                    android:text="Hombre"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mujer"
                    android:textSize="20dp" />


            </RadioGroup>
            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/btnguardar"
                android:text="Aceptar"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:background="@drawable/boton_redondeado"/>

            <Button
                android:id="@+id/btn_volver"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/boton_redondeado_claro"
                android:text="Salir"
                android:textSize="18sp"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>